{
  "include": ["__mocks__/**/*", ".storybook/**/*", "src/stories/**/*"],
  "exclude": ["**/node_modules/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "ESNext",
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "explainFiles": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "paths": {
      "src/*": ["./src/*"]
    }
  }
}
